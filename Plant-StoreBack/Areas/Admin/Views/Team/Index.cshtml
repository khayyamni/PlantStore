@model List<TeamVM>

@{
	ViewData["Title"] = "Index";
}


<div class="container my-5">
	<h1 class="text-center mt-3 mb-3">Blogs</h1>
	<a class="btn btn-success text-white" asp-action="Create">Create</a>
	<div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>
						Image
					</th>
					<th>
						Title
					</th>
					<th>
						Description
					</th>
					<th>
						Create Date
					</th>
					<th>
						Operations
					</th>

				</tr>
			</thead>
			<tbody>

				@foreach (var item in Model)
				{
					<tr data-id="">
						<td class="py-1">
							<img src="~/assets/images/about-page/blog/@item.Image" style="margin-top:10px; width:80%;height:80px;border-radius:0" alt="image" />
						</td>
						<td>
							@item.FullName
						</td>


						<td style=" white-space:normal">
							@item.Position
						</td>
						<td>
							@item.CreateTime.ToString("dd/MM/yyyy")
						</td>

						<td>
							<a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
							<a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
							<form class="d-inline-block" method="post" asp-action="Delete" asp-route-id="@item.Id">
								<button type="submit" class="btn btn-outline-danger">Delete</button>
							</form>

						</td>

					</tr>

				}




			</tbody>
		</table>
	</div>
</div>



