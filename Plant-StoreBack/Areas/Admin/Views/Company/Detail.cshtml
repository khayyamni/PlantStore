@model CompanyVM


@{
    ViewData["Title"] = "Detail";
}


@section css{
    <style>

        a {
            font-size: 16px !important;
            padding: 10px 21px !important;
        }

        input {
            font-size: 18px !important;
            font-weight: 600 !important;
        }



        .active-image {
            border: 3px solid greenyellow;
        }

        img {
            width: 29%;
            height: 30%;
        }
    </style>
}

<div class="container my-5">
    <h1 class="text-center mt-3">Detail</h1>
    <div class="mt-3">
        <img src="~/assets/images/about-page/company/@Model.Image" style="width:25%;height:30%" />
    </div>

    <div class="form-group mt-3">
        <label for="formFile" class="form-label my-2">Title</label>
        <input class="form-control" id="customFile" disabled asp-for="@Model.Title" />
    </div>


    <div class="form-group mt-3">
        <label for="formFile" class="form-label my-2">Description</label>
        <input class="form-control" id="customFile" disabled asp-for="@Model.Desc" />
    </div>

      <div class="form-group mt-3">
        <label for="formFile" class="form-label my-2">Description</label>
        <input class="form-control" id="customFile" disabled asp-for="@Model.DescLeft" />
    </div>

    <div class="form-group mt-3">
        <label for="formFile" class="form-label my-2">Description</label>
        <input class="form-control" id="customFile" disabled asp-for="@Model.DescRight" />
    </div>



    <div class="mt-3">
        <label for="formFile" class="form-label my-2">Create Date</label><br>
        @Model.CreateTime.ToString("dd/MM/yyyy")
    </div>

    <div class="back mt-2">
        <a class="btn btn-light text-white" asp-action="Index">Back</a>
    </div>


</div>




