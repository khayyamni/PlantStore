@model List<ProductVM>

@if (Model.Count() != 0)
{
	
        @foreach (var item in Model)
        {
            <div class="col-lg-6">
            <div class="card-image product-image" data-id="@item.Id">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="wishlist-icon">
                        <i class="fa-solid fa-heart wishlist wishlist-add"></i>
                    </div>
                    <div class="bucket-icon">
                        <i class="fa-solid fa-basket-shopping cart-add"></i>
                    </div>
                }
                else
                {
                    <div class="wishlist-icon">
                        <a asp-controller="Account" asp-action="Login">
                            <i class="fa-solid fa-heart wishlist wishlist-add"></i>

                        </a>
                    </div>
                    <div class="bucket-icon">
                        <a asp-controller="Account" asp-action="Login">
                            <i class="fa-solid fa-basket-shopping cart-add"></i>

                        </a>
                    </div>
                }
                    <a asp-controller="Shop" asp-action="ProductDetails" asp-route-id="@item.Id">
                        <img src="~/assets/images/shop-page/card/@item.Image"
                             alt="" />
                    </a>
                    <p>@item.CategoryName</p>
                    <h5>@item.Name</h5>
                    <span>@item.Price</span>
                </div>
            </div>
        }

	

}
else
{
	<div class="alert alert-danger mt-5" role="alert">
		Product not found!
	</div>
}