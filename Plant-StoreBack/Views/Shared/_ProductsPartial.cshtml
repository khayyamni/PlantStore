@model List<ProductVM>

@if (Model.Count() != 0)
{
	
        @foreach (var item in Model)
        {
            <div class="col-lg-6">
                <div class="card-image">
                    <div class="wishlist-icon">
                        <i class="fa-regular fa-heart wishlist-icons"></i>
                        <i class="fa-solid fa-heart wishlist d-none"></i>
                    </div>
                    <div class="bucket-icon">
                        <i class="fa-solid fa-basket-shopping"></i>
                    </div>
                    <a asp-controller="Shop" asp-action="ProductDetails" asp-route-id="@item.Id">
                        <img src="~/assets/images/shop-page/card/@item.Image"
                             alt="" />
                    </a>
                    <p>@item.CategoryName</p>
                    <h5>@item.Name</h5>
                    <span>@item.Price</span>
                </div>
            </div>
        }

	

}
else
{
	<div class="alert alert-danger mt-5" role="alert">
		Product not found!
	</div>
}