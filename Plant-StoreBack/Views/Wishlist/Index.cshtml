@model List<WishlistDetailVM>
@{
    ViewData["Title"] = "Index";
}


@section css{
    <link rel="stylesheet" href="~/assets/css/wishlist.css" />
}


<main style="background-color: #F8F7F6;">
    <!-- section banner start -->
    <section id="banner" style="background-image: url(/assets/images/shop-page/store-bg.jpg)">
        <div class="banner-wright">
            <h1>Your wishlist page</h1>
        </div>
        
    </section>
    <!-- section banner end -->

    <section id="wishlists">
        <div class="container">
            <div class="wishlist-all">
                <div class="empty @(Model.Count == 0 ? "":"d-none")">
                    <p>Wishlist cann't empty</p>
                    <a asp-controller="Shop" asp-action="Index">GO TO SHOP PAGE</a>
                </div>

                <div class="wishlist-table @(Model.Count == 0 ? "d-none":"")">
                    <h3>Your Wishlist</h3>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Add To Basket</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/assets/images/product/@item.Image">
                                    </td>
                                    <td>@item.Name</td>
                                    <td>$ @item.Price</td>
                                    <td data-id="@item.Id"><i class="fa fa-shopping-basket cart-add-basket"></i>  </td>
                                    <td>
                                        <button type="submit" data-id="@item.Id" class="btn btn-outline-danger delete-wishlist-item">Delete</button>
                                    </td>
                                </tr>
                            }
                            

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </section>

</main>

